# https://hub.docker.com/r/pytorch/pytorch/tags
FROM pytorch/pytorch:2.0.0-cuda11.7-cudnn8-runtime
RUN pip install --upgrade pip
RUN pip install \
    transformers==4.39.2 \
    pillow \
    pandas \
    datasets
RUN mkdir /data
RUN mkdir /src
WORKDIR /src
COPY embed.siglip.py /src/embed.siglip.py
CMD python embed.siglip.py